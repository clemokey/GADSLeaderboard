<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/ic_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_in_right
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/slide_out_left
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/slide_in_left
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_out_right
        </item>
    </style>

    <style name="CustomTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:drawableBottom">@drawable/ic_underline</item>
        <item name="android:drawablePadding">@dimen/fab_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/fab_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ic_round_corner</item>
        <item name="android:padding">@dimen/fab_margin</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/ic_round_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>