<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.bamideleoke.gadsleaderboard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".userhome.activities.SubmitActivity"
            android:label="@string/title_activity_submit"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".userhome.activities.MainActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".userhome.activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".onboarding.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>